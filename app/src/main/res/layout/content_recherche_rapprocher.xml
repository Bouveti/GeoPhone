<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_recherche_rapprocher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bouveti.geophone.RechercheRapprocherActivity"
    tools:showIn="@layout/app_bar_recherche_rapprocher">

    <TextView
        android:text="Recherche Rapproché"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="Faire sonner et vibrer ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_vibe_sound"
        android:layout_below="@+id/progressBarWifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:id="@+id/progressBarWifi"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/switch_vibe_sound" />

    <Button
        android:text="Trouvé"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/found"
        android:onClick="Found"
        android:layout_below="@+id/switch_vibe_sound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Puissance du wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginBottom="26dp"
        android:layout_alignBottom="@+id/progressBarWifi"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
